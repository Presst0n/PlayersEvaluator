        <!-- Column 0 -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>


            <TextBlock Grid.Row="0" Grid.Column="0" FontWeight="SemiBold" Margin="48 45 0 0" HorizontalAlignment="Left">My Rosters</TextBlock>
            <WrapPanel Grid.Row="0" Grid.Column="1" Margin="0 45 48 0" HorizontalAlignment="Right">
                <TextBlock FontWeight="SemiBold" Margin="0 2 5 0" VerticalAlignment="Stretch" HorizontalAlignment="Right">Reload rosters</TextBlock>
                <Button x:Name="RefreshRosters" Padding="3" Margin="0 0 0 0" HorizontalAlignment="Right" 
                        Background="LightGray" Width="35" Height="25" VerticalAlignment="Stretch">
                    <Image Source="/Resources/refresh2.png" />
                </Button>
            </WrapPanel>
