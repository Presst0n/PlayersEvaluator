<Window x:Class="PE.WPF.Views.ShellView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PE.WPF.Views"
        mc:Ignorable="d"
        Title="ShellView" Height="700" Width="1100">
    <DockPanel>
        <Menu DockPanel.Dock="Top" FontSize="15">
            <MenuItem Header="_File">
                <MenuItem Name="DisplayLoginView" Header="_LogIn" />
                <MenuItem Name="DisplayRegisterView" Header="_Register" />
                <MenuItem Name="LogOut" Header="_LogOut" />
            </MenuItem>
            <MenuItem Header="_Tools">

            </MenuItem>
            <MenuItem Header="_Help">

            </MenuItem>
        </Menu>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="31*"/>
            </Grid.ColumnDefinitions>
            <ContentControl x:Name="ActiveItem" Margin="5,5,5,5" Grid.ColumnSpan="2" />
        </Grid>
    </DockPanel>
</Window>
